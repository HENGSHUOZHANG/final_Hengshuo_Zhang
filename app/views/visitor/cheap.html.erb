<br>
<h1>Welcome to our recipe database</h1>
<% @chefs_recipes_cheap_hash.each do |chef, recipes|%>
  <% recipes.each do |recipe|%>
  <% if recipe.cost/recipe.output < 3%>
      <h2><%= recipe.title%> by chef: <%= chef.name%></h2>
      <p><%= sanitize(recipe.ingredients) %></p>
      <p>Directions: <%= sanitize(recipe.directions) %></p>
     <% end %>
   <% end %>
<% end %>